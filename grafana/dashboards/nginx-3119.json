{
  "id": null,
  "uid": "nginx-3119-simplified",
  "title": "NGINX Monitoring Dashboard (Simple)",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "panels": [
    {
      "type": "graph",
      "title": "Active Connections",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "nginx_connections_active",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 3
      },
      "legend": {
        "show": true
      }
    },
    {
      "type": "graph",
      "title": "Requests per Second (2xx, 4xx, 5xx)",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total{status=~\"2..\"}[1m])",
          "legendFormat": "2xx",
          "refId": "B"
        },
        {
          "expr": "rate(nginx_http_requests_total{status=~\"4..\"}[1m])",
          "legendFormat": "4xx",
          "refId": "C"
        },
        {
          "expr": "rate(nginx_http_requests_total{status=~\"5..\"}[1m])",
          "legendFormat": "5xx",
          "refId": "D"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 3,
        "w": 12,
        "h": 6
      },
      "legend": {
        "show": true
      }
    },
    {
      "type": "graph",
      "title": "Request Duration (Latency)",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(nginx_http_request_duration_seconds_sum[1m]) / rate(nginx_http_request_duration_seconds_count[1m])",
          "legendFormat": "Duration",
          "refId": "E"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 9,
        "w": 12,
        "h": 6
      }
    },
    {
      "type": "graph",
      "title": "Requests by Status Code",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total{status=~\"2..\"}[1m])",
          "legendFormat": "2xx",
          "refId": "F"
        },
        {
          "expr": "rate(nginx_http_requests_total{status=~\"3..\"}[1m])",
          "legendFormat": "3xx",
          "refId": "G"
        },
        {
          "expr": "rate(nginx_http_requests_total{status=~\"4..\"}[1m])",
          "legendFormat": "4xx",
          "refId": "H"
        },
        {
          "expr": "rate(nginx_http_requests_total{status=~\"5..\"}[1m])",
          "legendFormat": "5xx",
          "refId": "I"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 15,
        "w": 12,
        "h": 6
      }
    },
    {
      "type": "graph",
      "title": "NGINX Response Codes Over Time",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total{status=~\"2..\"}[1m])",
          "legendFormat": "2xx",
          "refId": "J"
        },
        {
          "expr": "rate(nginx_http_requests_total{status=~\"4..\"}[1m])",
          "legendFormat": "4xx",
          "refId": "K"
        },
        {
          "expr": "rate(nginx_http_requests_total{status=~\"5..\"}[1m])",
          "legendFormat": "5xx",
          "refId": "L"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 21,
        "w": 12,
        "h": 6
      }
    }
  ],
  "links": [],
  "annotations": {
    "list": []
  }
}
